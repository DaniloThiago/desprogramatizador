.footer
  align-items center
  background $gray-darker
  color $white 
  display flex
  font-size 1.6rem
  height $footer-height
  justify-content center
  // min-height 10vh

  strong
    display none

    +above('sm')
      display inline-block

  &__link 
    color $green
    font-weight bold
    text-decoration none



    &:focus
    &:hover
      text-decoration underline
