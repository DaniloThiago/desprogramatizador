    meta(name='image' content='https://www.felipefialho.com/1500-translator/medias/political-avatar.png') 
    meta(itemprop='name' content='1500 Translator')
    meta(itemprop='description' content='Traduzindo linguajar politico para vocabulário das ruas')
    meta(itemprop='image' content='https://www.felipefialho.com/1500-translator/medias/political-avatar.png') 
    meta(name='twitter:card' content='summary')
    meta(name='twitter:title' content='1500 Translator')
    meta(name='twitter:description' content='Traduzindo linguajar politico para vocabulário das ruas')
